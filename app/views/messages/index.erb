<div style="margin: 20px;">
<h1 style="color: #CC0000"> All Messages </h1>
<hr>

<% @messages.each do |message| %>
  <div class="message">
    <h3><a href="/messages/<%= message.id %>"><%= message.title %></a> <small>(by: <%= message.author %>)</small></h3>
    <p>
      <%= message.content %>
    </p>
  </div>
<% end %>

<hr>
<a href="/messages/new">Post a message!</a>
</div>