<% if @message && @message.errors.any? %>
  <div>
    <strong>Some issues with your message. Please fix them:</strong>
    <ul>
      <% @message.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<form method="post" action="/messages">
  <div>
    <label>Author:</label>
    <!--need '@message &&' because otherwise it is nil if you don't have @message = Message.new in the get request -->
    <input type="text" name="author" value="<%= @message.author %>">
  </div>
  <div>
    <label>Subject:</label>
    <input type="text" name="title" value="<%= @message.title %>">
  </div>
  <div>
    <label>Content:</label>
    <input type="text" name="content" value="<%= @message.content %>">
  </div>
  <div>
    <input type="submit" value="Submit">
  </div>
</form>